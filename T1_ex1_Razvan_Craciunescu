fs = 5000;
t = 0:1/fs:100;
x = square(pi*t,25); %semnal dreptunghiular
                     %perioada 2s si factorul de umplere 25%

for i = 1:1:length(x)
   if x(i) > 0
       x(i) = x(i)/2; %semnalul cu amplitudine pozitiva, se injumatateste, pentru a obtine nivel 
                         %maxim +0.5 si nivel minim -1.0
   end
end

plot(t,x)
axis([0 5.2 -1.2 1.2])
xlabel('Timp[secunde]')
ylabel('Amplitudine')
title('Semnal dreptunghiular')
